{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "tdt/input job configuration schema",
    "type": "object",
    "properties": {
        "name" : {
            "type":"string"
        },
        "occurence" : {
            "type" : "integer"
        },
	"extract": {
            "type": "object",
            "properties": {
                "type": {"type": "string"},
                "source": {"type": "string"}
            },
            "required": ["source","type"]
	},
	"map": {
            "type": "object",
            "properties": {
                "type": {"type": "string"},
                "mapfile": {"type": "string"}
            },
            "required": ["mapfile","type"]
	},
	"load": {
            "type": "object",
            "properties": {
                "type": {"type": "string"}
            },
            "required": ["type"]
	}
    },
    "required": ["name","occurence","extract", "load"]
}